        android:theme="@style/AppTheme">


        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/ActivityNoActionBar">


        </activity>

        <activity
            android:name=".activity.WelcomeActivity"
            android:theme="@style/ActivityNoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.graphActivity"/>



        <activity android:name=".activity.InputPetProfileActivity">

        </activity>

        <activity android:name=".activity.BluetoothActivity" />



        <activity android:name=".activity.SelectProfileActivity">

        </activity>


        <activity android:name=".activity.ProfileActivity">

        </activity>
    </application>

</manifest>
